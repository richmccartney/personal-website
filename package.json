{
  "name": "personal-website",
  "version": "0.0.0",
  "description": "Personal website of Richard McCartney",
  "main": "index.js",
  "repository": "git@github.com:richmccartney/personal-website.git",
  "author": "Richard McCartney <richard@mccartney.io>",
  "license": "MIT",
  "scripts": {
    "start": "next start",
    "start.dev": "next dev",
    "build": "next build",
    "format.js": "prettier --write \"**/*.{js,ts,tsx}\"",
    "format.styles": "yarn lint.styles --fix",
    "lint.js": "eslint . --ext ts --ext tsx --ext js",
    "lint.styles": "stylelint '**/*.{css,scss}' --report-needless-disables --report-invalid-scope-disables",
    "lint.type": "tsc --pretty --noEmit",
    "test": "jest",
    "test.all": "yarn lint.js && yarn lint.type && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint.type"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint.js",
      "yarn lint.styles",
      "yarn format.js",
      "yarn format.styles"
    ]
  },
  "dependencies": {
    "generate-react-doc": "^1.0.2",
    "next": "latest",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.8",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^26.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-emotion": "^10.0.27",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "jest-emotion": "^10.0.32",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "modern-css-reset": "^1.1.0",
    "path": "^0.12.7",
    "prettier": "^2.0.2",
    "react-test-renderer": "^16.13.1",
    "recompose": "^0.30.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^3.8.3"
  }
}
